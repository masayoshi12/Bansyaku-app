<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <%if @sns_id.present? %>
          <%= hidden_field_tag :sns_auth, true %>
        <% else %>
        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <% end %>

        <div class="field">
          <%= f.label :nickname, "ユーザー名" %><br />
          <%= f.text_field :nickname %>
        </div>

        <div class="field">
          <%= f.label :gender_id, "性別" %><br />
          <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box"}) %>
        </div>

        <div class="field">
          <%= f.label :age_id, "年齢層" %><br />
          <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box"}) %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
          <%#= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, method: :post%>
        </div>

      <% end %>
    </div>
  </div>
</div>
