<div class="card">
  <%= link_to image_tag(bansyaku.image, class: :card__img ), bansyakupost_path(bansyaku) %>
  <div class="card__body">
    <%= link_to bansyaku.sake_name, bansyakupost_path(bansyaku), class: :card__title%>
